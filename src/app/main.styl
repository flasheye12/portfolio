$parallax-offset = 30vh;
$content-offset = 40vh;
$transition-speed = 1.2s;
$slide-number = 3;
      
.page {
	position: fixed;
	width: 100%;
	height: 100vh + $parallax-offset;
	will-change: transform;
  transform: translateY($parallax-offset);
  transition: transform $transition-speed cubic-bezier(0.22, 0.44, 0, 1);

  &:first-child {
		overflow: hidden;
    transform: translateY(-($parallax-offset / 2));
    .content-wrapper {
      transform: translateY($parallax-offset /2);
    }
  }
  
  &.up-scroll {
  	transform: translateY(-($parallax-offset / 2));
  	.content-wrapper {
	    transform: translateY($parallax-offset / 2);
	  }
	  + .page {
	    transform: translateY($parallax-offset);
	      .content-wrapper {
	        transform: translateY($parallax-offset);
	      }
	    }
  }
  
  &.down-scroll {
  	transform: translateY(-(100vh + $parallax-offset));
	  .content-wrapper {
	    transform: translateY($content-offset);
	  }
	  + .page:not(.down-scroll) {
	    transform: translateY(-($parallax-offset / 2));
	  	.content-wrapper {
	      transform: translateY($parallax-offset / 2);
	    }
	  }
	}
  
  .content-wrapper {
  	display: flex;
  	height: 100vh;
	  color: #fff;
	  flex-flow: column nowrap;
	  justify-content: center;
	  backface-visibility: hidden;
	  will-change: transform;
	  transform: translateY($content-offset);
	  transition: transform $transition-speed + .5 cubic-bezier(0.22, 0.44, 0, 1);
  }
}
    
.front {
  background-color: #4f4a50;
  z-index: 3
}

.experience {
	background-color: transparent;
	z-index: 1;
}

.evelope {
	background-color: transparent;
	z-index: 2;
}

.page.front.down-scroll + .page.experience.down-scroll {
	transform: translateY(0);
}

.page.experience:not(.down-scroll) + .page.evelope {
	transform: translateY(100vh);
}

.page.experience.down-scroll .content-wrapper {
	transform: translateY(0);
}

.nav-panel {
  position: fixed;
  top: 50%;
  right: 2%;
  transform: translateY(-50%);
  z-index: 1000;
  transition: opacity 0.5s, transform 0.5s cubic-bezier(0.57, 1.2, 0.68, 2.6);
  will-change: transform, opacity;

  &.invisible {
    opacity: 0;
    transform: translateY(-50%) scale(0.5);
  }

  ul {
    list-style-type: none;

    .nav-btn {
      position: relative;
      overflow: hidden;
      width: 1rem;
      height: 1rem;
      margin-bottom: 0.5rem;
      border: 0.12rem solid #000;
      border-radius: 50%;
      cursor: pointer;
      transition: border-color, transform 0.3s;
      will-change: border-color, transform;

      &:after {
        content: "";
			  position: absolute;
			  top: 50%;
			  left: 50%;
        width: 100%;
        height: 100%;
        border-radius: 50%;
        transform: translateX(-50%) translateY(-50%) scale(0.3);
        background-color: #000;
        opacity: 0;
        transition: transform, opacity 0.3s;
        will-change: transform, opacity;
      }

      &.active:after, &:hover:after {
        transform: translateX(-50%) translateY(-50%) scale(0.7);
        opacity: 1;
      }
      &:hover {
        border-color: yellow;
        transform: scale(1.2);
      }
      &:hover:after {
        background-color: yellow;
      }
    }
  }

  .scroll-btn {
    position: absolute;
    left: 0;
    width: 1rem;
    height: 1rem;
    border: 0.2rem solid #000;
    border-left: none;
    border-bottom: none;
    cursor: pointer;
    transform-origin: 50% 50%;
    transition: border-color 0.3s;

    &.up {
      top: -1.6rem;
      transform: rotate(-45deg);
    }
    &.down {
      bottom: -1.2rem;
      transform: rotate(135deg);
    }

    &:hover {
      border-color: yellow;
    }
  }
}
